<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./index.css" />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.cdnfonts.com/css/asterone-demo"
      rel="stylesheet"
    />

    <!-- light mode google icon -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <!-- dark mode google icon -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js"></script>
    <title>HODLINFO</title>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-light navbar-cust navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-logo site-name" href="#">HODLINFO</a>
        <button
          style="border-color: white"
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav navbar-middle">
            <li class="nav-item">
              <a class="navbar-button" href="/"
                >INR <i class="fa fa-caret-down" aria-hidden="true"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="navbar-button"
                >BTC <i class="fa fa-caret-down" aria-hidden="true"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="navbar-button">Buy BTC</a>
            </li>
          </ul>
          <ul class="navbar-nav navbar-end">
            <li class="nav-item">
              <div class="progress-bar"><p id="timer">60</p></div>
            </li>
            <li class="nav-item" style="width: 14.8rem">
              <a class="navbar-button-contact"
                ><i
                  class="fa fa-telegram fa-lg"
                  style="color: white"
                  aria-hidden="true"
                ></i>
                Connect Telegram</a
              >
            </li>
            <li class="nav-item">
              <label
                style="display: flex"
                class="custom-control teleport-switch"
              >
                <span
                  style="color: #3dc6c1"
                  class="teleport-switch-control-description material-symbols-outlined"
                >
                  light_mode
                </span>
                <input
                  type="checkbox"
                  class="teleport-switch-control-input"
                  checked=""
                />
                <span class="teleport-switch-control-indicator"></span>
                <span
                  style="color: #3dc6c1"
                  class="teleport-switch-control-description material-symbols-outlined"
                >
                  dark_mode
                </span>
              </label>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <script>
      var timer = 60;
      const timerD = document.getElementById("timer");
      setInterval(() => {
        timer--;
        timerD.innerText = timer;
        if (timer === 0) {
          timer = 60;
        }
      }, 1000);
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
